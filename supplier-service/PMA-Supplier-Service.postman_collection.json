							"mode": "raw",
							"raw": "{\n    \"maNCC\": \"NCC001\",\n    \"tenNCC\": \"Công ty Dược phẩm ABC\",\n    \"diaChi\": \"123 Đường ABC, Quận 1, TP.HCM\",\n    \"soDienThoai\": \"0283456789\",\n    \"email\": \"contact@abc.com\",\n    \"nguoiDaiDien\": \"Nguyễn Văn A\"\n}"
