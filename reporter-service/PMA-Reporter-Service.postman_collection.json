{
  "info": {
    "name": "PMA Pharmacy - Reporter Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Step 1: Create Drug (Nguồn dữ liệu)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"maThuoc\": \"T001\",\n    \"tenThuoc\": \"Paracetamol 500mg\",\n    \"giaBan\": 5000\n}"
        },
        "url": "http://localhost:8082/api/drugs"
      }
    },
    {
      "name": "Step 2: Create Invoice (Sales Service)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"maHoaDon\": \"HD20251222_01\",\n    \"ngayBan\": \"2025-12-22T10:00:00\",\n    \"maNV\": \"NV001\",\n    \"chiTiet\": [\n        {\n            \"maThuoc\": \"T001\",\n            \"soLuong\": 10,\n            \"donGia\": 5000\n        }\n    ]\n}"
        },
        "url": "http://localhost:8083/api/sales/invoices"
      }
    },
    {
      "name": "Step 3: Get Reporter Summary",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "http://localhost:8086/api/reports/summary"
      }
    }
  ],
  "variable": [{ "key": "token", "value": "dán_token_vào_đây" }]
}
